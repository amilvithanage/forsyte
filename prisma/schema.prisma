// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Template {
  id         String   @id @default(uuid())
  name       String
  schemaJson Json     // defines selectable sections, stances, conditional text
  createdAt  DateTime @default(now())
  policies   Policy[]
}

model Policy {
  id            String   @id @default(uuid())
  customerId   String   // equal the law firm / organization ID.
  templateId   String
  template     Template @relation(fields: [templateId], references: [id])
  createdAt    DateTime @default(now())
  versions     PolicyVersion[]

  @@unique([customerId, templateId]) // one policy per customer per template
}

model PolicyVersion {
  id          String   @id @default(uuid())
  policyId    String
  policy      Policy   @relation(fields: [policyId], references: [id], onDelete: Cascade)
  version     Int
  contentJson Json
  changeNote  String?
  createdAt   DateTime @default(now())

  @@unique([policyId, version])
}
